    <meta property="og:image" content="<%- cover %>">
    <meta property="og:url" content="<%- `https://catalog-of-archival-resilience.herokuapp.com/transcoding/${userName}` %>">
    <meta property="og:site_name" content="catalog-of-archival-resilience">

    <meta name="twitter:title" content="<%- projectTitle %>">
    <meta name="twitter:description" content="<%- descriptionText %>">
